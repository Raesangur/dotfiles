configuration {
	modi: "window,drun,run,ssh";
	combi-modi: "drun,run,ssh";
	drun-match-fields: "name,generic,exec,categories";
	lines: 10;
	columns: 2;
	font: "NotoSansMono-Bold 12";
	show-icons: true;
	bw: 1;
	terminal: "alacritty";
	click-to-exit: true;
	
	levenshtein-sort: true;
	case-sensitive: false;
	sidebar-mode: false;
	matching: "fuzzy";

