  	color-urgent: "#510231, #FA6E43, #510231, #FA6E43, #FEE8DA";
  	color-active: "#510231, #FEE8DA, #510231, #FF974E, #510231";
  	color-window: "#510231, #510231, #FF974E";
*/

combi-hide-mode-prefix: true;

}
@theme "~/.config/rofi/themes/theme.rasi"
